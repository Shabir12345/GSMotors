# Database
DATABASE_URL="postgresql://user:password@localhost:5432/auto_sales?schema=public"

# App
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Authentication
JWT_SECRET="your-secret-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# Admin Credentials (Initial Setup)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="change-me-on-first-login"

# Image Storage (Choose one: S3 or Cloudflare R2)
# AWS S3
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-bucket-name"

# Cloudflare R2 (S3-compatible)
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET="your-bucket-name"
# Optional: set a custom domain (via Cloudflare R2 public bucket or CDN)
R2_PUBLIC_URL=""

# Email Notifications (Gmail Setup)
EMAIL_USER="your-email@gmail.com"
EMAIL_APP_PASSWORD="your-app-password"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_GTM_ID=""
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=""

# Error Tracking (Optional - Sentry)
SENTRY_DSN=""

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"
