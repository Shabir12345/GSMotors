{
  "name": "generic-auto-sales-template",
  "version": "1.0.0",
  "description": "Generic Auto Sales - Used Car Dealership Management System",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && prisma db push --skip-generate --accept-data-loss || true && SKIP_STATIC_GENERATION=true next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@prisma/client": "^6.18.0",
    "@tanstack/react-query": "^5.17.0",
    "@types/nodemailer": "^7.0.2",
    "@vercel/analytics": "^1.6.1",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "heic-convert": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "next": "14.2.35",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.2",
    "swiper": "^12.0.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "autoprefixer": "^10.4.17",
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "ignore-loader": "^0.1.2",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prisma": "^6.18.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}